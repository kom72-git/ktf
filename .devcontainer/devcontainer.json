{
  "name": "ktf-devcontainer",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "workspaceFolder": "/workspaces/ktf",
  "forwardPorts": [5173, 3001],
  "portsAttributes": {
    "5173": {
      "label": "Vite (frontend)",
      "onAutoForward": "openBrowser",
      "visibility": "public"
    },
    "3001": {
      "label": "Express (backend)",
      "onAutoForward": "notify",
      "visibility": "public"
    }
  },
  "postCreateCommand": "npm install -g concurrently && npm install && cd server && npm install",
  "postStartCommand": "concurrently \"cd server && npm start\" \"npm run dev\"",
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": ["dbaeumer.vscode-eslint", "esbenp.prettier-vscode"]
    }
  }
}